<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- set drawables for different states for spinner -->
    <item android:drawable="@drawable/spinner_pressed" android:state_enabled="true" android:state_pressed="true"></item>
    <item android:drawable="@drawable/spinner_focused" android:state_enabled="true" android:state_focused="true"></item>
    <item android:drawable="@drawable/spinner_normal" android:state_enabled="true"></item>
    <item android:drawable="@drawable/spinner_disabled" android:state_enabled="false"></item>
</selector>