<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <!-- <bitmap android:src="@drawable/progress_background"/> -->
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#55000000"
                android:startColor="#00000000" />
            <corners android:radius="@dimen/progress_corner_radius" />
            <stroke
                android:width="3dp"
                android:color="#CC000000" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#234"
                    android:centerY="0.75"
                    android:endColor="#a24"
                    android:startColor="#234" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <!-- <bitmap android:src="@drawable/progress" /> -->
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:endColor="#01FFFFFF"
                    android:startColor="#FFFFFFFF" />
                <corners android:radius="@dimen/progress_corner_radius" />
                <stroke
                    android:width="3dp"
                    android:color="#CC000000" />
            </shape>
        </clip>
    </item>
</layer-list>